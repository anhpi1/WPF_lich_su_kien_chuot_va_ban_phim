<UserControl x:Class="WPF_lich_su_kien_chuot_va_ban_phim.View.HOOK__UC_main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_lich_su_kien_chuot_va_ban_phim.View"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <UserControl.Resources>
        <Style x:Key="NeumorphicItemStyle" TargetType="ListBoxItem">
            <Setter Property="Background" Value="#D1D9E6"/>
            <Setter Property="Margin" Value="0,0,0,15"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <Border x:Name="ItemBorder" 
       Background="{TemplateBinding Background}" 
       CornerRadius="15" 
       Height="60"
       Margin="10,0,10,0">
                                <Border.Effect>
                                    <DropShadowEffect Color="#A3B1C6" BlurRadius="10" ShadowDepth="4" Direction="315" Opacity="0.5"/>
                                </Border.Effect>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="60"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- Icon file -->
                                    <Path Grid.Column="0" Fill="#7E8A9A" 
             HorizontalAlignment="Center" 
             VerticalAlignment="Center"
             Data="M14,2H6A2,2 0 0,0 4,4V20A2,2 0 0,0 6,22H18A2,2 0 0,0 20,20V8L14,2M18,20H6V4H13V9H18V20Z"
             Stretch="Uniform" 
             Width="20" 
             Height="20"/>

                                    <!-- Nội dung chính -->
                                    <ContentPresenter Grid.Column="1" 
                         VerticalAlignment="Center" 
                         HorizontalAlignment="Left"
                         Margin="10,0,0,0"/>

                                    <!-- Thanh chỉ báo chọn - DI CHUYỂN RA NGOÀI Border -->
                                </Grid>
                            </Border>

                            <!-- ✅ ĐẶT Ở ĐÂY - ngoài Border chính -->
                            <Border x:Name="SelectedIndicator" 
       Width="4" 
       Height="30" 
       HorizontalAlignment="Left" 
       Margin="10,0,0,0"
       CornerRadius="2,0,0,2"
       Background="#5A8DEE" 
       Visibility="Collapsed"/>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#E2E6EE"/>
                            </Trigger>

                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="ItemBorder" Property="Background" Value="#FFFFFF"/>
                                <Setter TargetName="SelectedIndicator" Property="Visibility" Value="Visible"/>
                                <Setter Property="Foreground" Value="#5A8DEE"/>
                                <Setter Property="FontWeight" Value="Bold"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Border Background="#D1D9E6" CornerRadius="45">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>

                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid Margin="0,20,0,0" Visibility="Hidden" Grid.Row="0" Grid.Column="0"  x:Name="Record_on">
                            <Path Fill="#ECF0F3" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                    </CombinedGeometry>

                                </Path.Data>

                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="30,30,300,60" RadiusX="20" RadiusY="20"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>
                                <!-- BÓNG ĐƠN -->
                                <Path.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Direction="-45" Opacity="0.35"/>
                                </Path.Effect>
                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="30,30,300,60" RadiusX="20" RadiusY="20"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>
                                <!-- BÓNG ĐƠN -->
                                <Path.Effect>
                                    <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="5" Direction="135" Opacity="1"/>
                                </Path.Effect>
                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,10,360,100" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="40,20,320,80"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>

                            </Path>
                        </Grid>
                        <Grid Visibility="Visible" Grid.Row="0" Grid.Column="0" x:Name="Record_off">
                            <Border Background="#ECF0F3" CornerRadius="20" Margin="20,-20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="300">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFFFFF" BlurRadius="12" ShadowDepth="7" Direction="135" Opacity="1"/>
                                </Border.Effect>
                            </Border>
                            <Border  Background="#ECF0F3" CornerRadius="20" Margin="20,-20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="300">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="7" Direction="-45" Opacity="0.3"/>
                                </Border.Effect>
                            </Border>

                        </Grid >
                        <TextBlock TextAlignment="Center"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="#FF979DA5" Margin="20,0,0,0" Height="60" Width="300" x:Name="Record">RECORD</TextBlock>
                        <Button Style="{StaticResource InvisibleButton}" Background="Transparent" Height="80" Width="300" BorderBrush="Transparent" Click="Button_Click"></Button>

                    </Grid>
                    <Grid Grid.Column="3">
                        <Grid Margin="0,20,0,0" Visibility="Hidden" Grid.Row="0" Grid.Column="0" x:Name="Replay_on">
                            <Path Fill="#ECF0F3" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                    </CombinedGeometry>

                                </Path.Data>

                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="30,30,300,60" RadiusX="20" RadiusY="20"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>
                                <!-- BÓNG ĐƠN -->
                                <Path.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Direction="-45" Opacity="0.35"/>
                                </Path.Effect>
                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="30,30,300,60" RadiusX="20" RadiusY="20"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>
                                <!-- BÓNG ĐƠN -->
                                <Path.Effect>
                                    <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="5" Direction="135" Opacity="1"/>
                                </Path.Effect>
                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,10,360,100" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="40,20,320,80"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>

                            </Path>
                        </Grid>
                        <Grid Visibility="Visible" Grid.Row="0" Grid.Column="0" x:Name="Replay_off">
                            <Border Background="#ECF0F3" CornerRadius="20" Margin="20,-20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="300">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFFFFF" BlurRadius="12" ShadowDepth="7" Direction="135" Opacity="1"/>
                                </Border.Effect>
                            </Border>
                            <Border  Background="#ECF0F3" CornerRadius="20" Margin="20,-20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="300">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="7" Direction="-45" Opacity="0.3"/>
                                </Border.Effect>
                            </Border>

                        </Grid >
                        <TextBlock TextAlignment="Center"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="#FF979DA5" Margin="20,0,0,0" Height="60" Width="300" x:Name="Replay">REPLAY</TextBlock>
                        <Button Style="{StaticResource InvisibleButton}" Background="Transparent" Height="80" Width="300" BorderBrush="Transparent" Click="Button_Click_1"></Button>

                    </Grid>
                </Grid>
                
                <!-- 
                <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <TextBlock Text="Replay Mode:" VerticalAlignment="Center" Margin="0,0,20,0" FontSize="20" Foreground="#FF979DA5"/>
                    <RadioButton x:Name="Mode0" Content="Mouse" GroupName="ReplayMode" VerticalAlignment="Center"  Margin="10,0" FontSize="20" Foreground="#FF979DA5"/>
                    <RadioButton x:Name="Mode1" Content="Keyboard" GroupName="ReplayMode"  VerticalAlignment="Center"  Margin="10,0" FontSize="20" Foreground="#FF979DA5"/>
                    <RadioButton x:Name="Mode2" Content="Combine" GroupName="ReplayMode" IsChecked="True" VerticalAlignment="Center"  Margin="10,0" FontSize="20" Foreground="#FF979DA5"/>
                </StackPanel>
                <ListBox Background="Transparent" Grid.Row="1" Grid.RowSpan="4" Name="FilePairListBox" Margin="10" MouseLeftButtonUp="FilePairListBox_MouseLeftButtonUp" SelectionChanged="FilePairListBox_SelectionChanged">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                -->
                <Border Background="White" 
        CornerRadius="16" 
        BorderBrush="#E5E7EB" 
        BorderThickness="1" 
        Padding="25,15"
        HorizontalAlignment="Center" 
        VerticalAlignment="Center">

                    <Border.Effect>
                        <DropShadowEffect Color="#3B82F6" BlurRadius="20" ShadowDepth="5" Opacity="0.15" Direction="270"/>
                    </Border.Effect>

                    <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                        <TextBlock Text="Replay Mode:" 
                   VerticalAlignment="Center" 
                   Margin="0,0,25,0" 
                   FontSize="16" 
                   FontWeight="Bold"
                   Foreground="#1F2937"/>

                        <RadioButton x:Name="Mode0" Content="Mouse" GroupName="ReplayMode" 
                     VerticalAlignment="Center" Margin="0,0,20,0" FontSize="16" Foreground="#4B5563"/>

                        <RadioButton x:Name="Mode1" Content="Keyboard" GroupName="ReplayMode" 
                     VerticalAlignment="Center" Margin="0,0,20,0" FontSize="16" Foreground="#4B5563"/>

                        <RadioButton x:Name="Mode2" Content="Combine" GroupName="ReplayMode" IsChecked="True" 
                     VerticalAlignment="Center" FontSize="16" Foreground="#4B5563" FontWeight="SemiBold"/>
                    </StackPanel>
                </Border>

                <ListBox Background="Transparent" 
                BorderThickness="0" 
                Grid.Row="1" 
                Grid.RowSpan="4" 
                Name="FilePairListBox" 
                Margin="10" 
                ItemContainerStyle="{StaticResource NeumorphicItemStyle}"
                MouseLeftButtonUp="FilePairListBox_MouseLeftButtonUp" 
                SelectionChanged="FilePairListBox_SelectionChanged">

                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock Text="{Binding}" 
                              FontSize="16" 
                              FontFamily="Segoe UI Semibold"
                              VerticalAlignment="Center"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                             </ListBox>


                <TextBox x:Name="ReplayKeyboardText"
					         Grid.Row="4"
					         Margin="20"
					         Height="120"
					         FontFamily="Consolas"
					         FontSize="14"
					         IsReadOnly="False"
					         TextWrapping="Wrap"
					         VerticalScrollBarVisibility="Auto"/>


                </Grid>
        </Border>
    </Grid>
</UserControl>
