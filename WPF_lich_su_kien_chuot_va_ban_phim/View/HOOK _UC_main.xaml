<UserControl x:Class="WPF_lich_su_kien_chuot_va_ban_phim.View.HOOK__UC_main"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_lich_su_kien_chuot_va_ban_phim.View"
             mc:Ignorable="d" 
             d:DesignHeight="720" d:DesignWidth="1280">
    <Grid>
        <Border Background="#D1D9E6" CornerRadius="45">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        <ColumnDefinition></ColumnDefinition>
                        
                    </Grid.ColumnDefinitions>

                    <Grid>
                        <Grid Margin="0,20,0,0" Visibility="Hidden" Grid.Row="0" Grid.Column="0"  x:Name="Record_on">
                            <Path Fill="#ECF0F3" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                    </CombinedGeometry>

                                </Path.Data>

                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="30,30,300,60" RadiusX="20" RadiusY="20"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>
                                <!-- BÓNG ĐƠN -->
                                <Path.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Direction="-45" Opacity="0.35"/>
                                </Path.Effect>
                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="30,30,300,60" RadiusX="20" RadiusY="20"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>
                                <!-- BÓNG ĐƠN -->
                                <Path.Effect>
                                    <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="5" Direction="135" Opacity="1"/>
                                </Path.Effect>
                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,10,360,100" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="40,20,320,80"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>

                            </Path>
                        </Grid>
                        <Grid Visibility="Visible" Grid.Row="0" Grid.Column="0" x:Name="Record_off">
                            <Border Background="#ECF0F3" CornerRadius="20" Margin="20,-20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="300">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFFFFF" BlurRadius="12" ShadowDepth="7" Direction="135" Opacity="1"/>
                                </Border.Effect>
                            </Border>
                            <Border  Background="#ECF0F3" CornerRadius="20" Margin="20,-20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="300">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="7" Direction="-45" Opacity="0.3"/>
                                </Border.Effect>
                            </Border>

                        </Grid >
                        <TextBlock TextAlignment="Center"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="#FF979DA5" Margin="20,0,0,0" Height="60" Width="300" x:Name="Record">RECORD</TextBlock>
                        <Button Style="{StaticResource InvisibleButton}" Background="Transparent" Height="80" Width="300" BorderBrush="Transparent" Click="Button_Click"></Button>

                    </Grid>
                    <Grid Grid.Column="3">
                        <Grid Margin="0,20,0,0" Visibility="Hidden" Grid.Row="0" Grid.Column="0" x:Name="Replay_on">
                            <Path Fill="#ECF0F3" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                    </CombinedGeometry>

                                </Path.Data>

                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="30,30,300,60" RadiusX="20" RadiusY="20"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>
                                <!-- BÓNG ĐƠN -->
                                <Path.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="5" Direction="-45" Opacity="0.35"/>
                                </Path.Effect>
                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,20,320,80" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="30,30,300,60" RadiusX="20" RadiusY="20"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>
                                <!-- BÓNG ĐƠN -->
                                <Path.Effect>
                                    <DropShadowEffect Color="White" BlurRadius="10" ShadowDepth="5" Direction="135" Opacity="1"/>
                                </Path.Effect>
                            </Path>
                            <Path Fill="#D1D9E6" HorizontalAlignment="Center">
                                <Path.Data>

                                    <CombinedGeometry GeometryCombineMode="Exclude">
                                        <!-- HÌNH NGOÀI -->
                                        <CombinedGeometry.Geometry1>
                                            <RectangleGeometry Rect="20,10,360,100" />
                                        </CombinedGeometry.Geometry1>
                                        <!-- LỖ TRONG -->
                                        <CombinedGeometry.Geometry2>
                                            <RectangleGeometry Rect="40,20,320,80"/>
                                        </CombinedGeometry.Geometry2>

                                    </CombinedGeometry>

                                </Path.Data>

                            </Path>
                        </Grid>
                        <Grid Visibility="Visible" Grid.Row="0" Grid.Column="0" x:Name="Replay_off">
                            <Border Background="#ECF0F3" CornerRadius="20" Margin="20,-20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="300">
                                <Border.Effect>
                                    <DropShadowEffect Color="#FFFFFF" BlurRadius="12" ShadowDepth="7" Direction="135" Opacity="1"/>
                                </Border.Effect>
                            </Border>
                            <Border  Background="#ECF0F3" CornerRadius="20" Margin="20,-20,0,0" HorizontalAlignment="Center" VerticalAlignment="Center" Height="60" Width="300">
                                <Border.Effect>
                                    <DropShadowEffect Color="Black" BlurRadius="12" ShadowDepth="7" Direction="-45" Opacity="0.3"/>
                                </Border.Effect>
                            </Border>

                        </Grid >
                        <TextBlock TextAlignment="Center"  HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="30" Foreground="#FF979DA5" Margin="20,0,0,0" Height="60" Width="300" x:Name="Replay">REPLAY</TextBlock>
                        <Button Style="{StaticResource InvisibleButton}" Background="Transparent" Height="80" Width="300" BorderBrush="Transparent" Click="Button_Click_1"></Button>

                    </Grid>
                </Grid>
                <ListBox Background="Transparent" Grid.Row="1" Grid.RowSpan="4" Name="FilePairListBox" Margin="10" MouseLeftButtonUp="FilePairListBox_MouseLeftButtonUp">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding}" />
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>

            </Grid>
        </Border>
    </Grid>
</UserControl>
