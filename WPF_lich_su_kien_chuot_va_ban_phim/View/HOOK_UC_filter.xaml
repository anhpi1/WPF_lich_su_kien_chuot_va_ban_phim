<UserControl x:Class="WPF_lich_su_kien_chuot_va_ban_phim.View.HOOK_UC_filter"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPF_lich_su_kien_chuot_va_ban_phim.View"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="900">

    <UserControl.Resources>
        <Style TargetType="ScrollBar">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Width" Value="8"/>
        </Style>
    </UserControl.Resources>

    <Grid Background="#F1F5F9">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="280"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" BorderBrush="#E2E8F0" BorderThickness="0,0,1,0" Padding="20">
            <StackPanel>
                <TextBlock Text="Cấu Hình Lọc" FontSize="18" FontWeight="Bold" Foreground="#1E293B" Margin="0,0,0,20"/>

                <TextBlock Text="Tìm kiếm file" FontSize="14" FontWeight="SemiBold" Foreground="#64748B" Margin="0,0,0,5"/>
                <Border CornerRadius="8" BorderBrush="#CBD5E1" BorderThickness="1" Padding="10" Background="#F8FAFC" Margin="0,0,0,20">
                    <Grid>
                        <TextBlock Text="Nhập tên sự kiện..." Foreground="#94A3B8" FontStyle="Italic" VerticalAlignment="Center" IsHitTestVisible="False"/>
                        <TextBox Background="Transparent" BorderThickness="0" FontSize="14" Foreground="#334155"/>
                    </Grid>
                </Border>

                <StackPanel Orientation="Horizontal" Margin="10">
                    <CheckBox x:Name="KeyboardCheckBox" Content="Bàn phím" Margin="0,0,10,0" IsChecked="True" Checked="FilterCheckBox_Changed" Unchecked="FilterCheckBox_Changed"/>
                    <CheckBox x:Name="MouseCheckBox" Content="Chuột" IsChecked="True" Checked="FilterCheckBox_Changed" Unchecked="FilterCheckBox_Changed"/>
                </StackPanel>

                <Button Content="Xử lý dữ liệu" Margin="0,30,0,0" Height="40" Background="#3B82F6" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="Button_Click_2" >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Áp dụng lọc" Margin="0,30,0,0" Height="40" Background="#3B82F6" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="Button_Click">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                
                <Button Content="Xem thống kê" Margin="0,30,0,0" Height="40" Background="#3B82F6" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="Button_Click_1">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="Xóa dữ liệu" Margin="0,30,0,0" Height="40" Background="#3B82F6" Foreground="White" FontWeight="Bold" BorderThickness="0" Click="Button_Click_3" >
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>
        </Border>

        <Grid Grid.Column="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,15">
                <TextBlock Text="Danh Sách File Sự Kiện" FontSize="22" FontWeight="Bold" Foreground="#1E293B" VerticalAlignment="Center"/>
                <Border Background="#DBEAFE" CornerRadius="10" Padding="10,2" Margin="10,0,0,0" VerticalAlignment="Center">
                    <TextBlock Text="processed_events" Foreground="#2563EB" FontSize="12" FontWeight="SemiBold"/>
                </Border>
            </StackPanel>

            <ListBox x:Name="MyListBox" Grid.Row="1" Background="Transparent" BorderThickness="0" ScrollViewer.HorizontalScrollBarVisibility="Disabled" HorizontalContentAlignment="Stretch" ItemsSource="{Binding ActionList}">

                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="White" CornerRadius="10" Padding="15,10" Margin="0,0,0,10" BorderBrush="#E2E8F0" BorderThickness="1">

                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <!-- ICON -->
                                <Border Grid.Column="0" Width="40" Height="40" Background="#EEF2FF" CornerRadius="8" Margin="0,0,15,0">
                                    <TextBlock Text="{Binding Icon}" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>

                                <!-- TEXT -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}" FontWeight="Bold" Foreground="#334155" FontSize="15"/>
                                    <TextBlock Text="{Binding Info}" Foreground="#94A3B8" FontSize="12" Margin="0,2,0,0"/>
                                </StackPanel>

                                <!-- PLAY BUTTON -->
                                <Button Grid.Column="2" Width="40" Height="40" Background="Transparent" BorderThickness="0">
                                    <Grid>
                                        <Ellipse Fill="#F1F5F9"  Width="36" Height="36"/>
                                        <Polygon Points="14,10 24,18 14,26" Fill="#3B82F6" HorizontalAlignment="Center" VerticalAlignment="Center"  Margin="2,0,0,0"/>
                                    </Grid>
                                </Button>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>


            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,15,0,0">
                <Button Content="Xóa file chọn" Background="Transparent" Foreground="#EF4444" BorderBrush="#FECACA" BorderThickness="1" Width="120" Height="45" Margin="0,0,15,0">
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>

                <Button Content="Phát lại (Replay)" Background="#3B82F6" Foreground="White" FontWeight="Bold" BorderThickness="0" Width="180" Height="45">
                    <Button.Effect>
                        <DropShadowEffect Color="#3B82F6" BlurRadius="20" ShadowDepth="5" Opacity="0.3" Direction="270"/>
                    </Button.Effect>
                    <Button.Resources>
                        <Style TargetType="Border">
                            <Setter Property="CornerRadius" Value="8"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </StackPanel>

        </Grid>
    </Grid>
</UserControl>